            font-weight: 600;
          }

          /* Slider viewport */
          .carousel {
            position: relative;
            overflow: hidden;
            padding: 10px 6px;
          }

          /* track and slide sizing — JS adjusts transform */
          .track {
            display: flex;
            gap: 18px;
            transition: transform 450ms cubic-bezier(0.2, 0.9, 0.2, 1);
            will-change: transform;
            touch-action: pan-y;
          }

          /* card */
          .card {

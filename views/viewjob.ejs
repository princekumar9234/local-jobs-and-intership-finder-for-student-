        <script>
          (function () {
            const track = document.getElementById("track");
            const prevBtn = document.getElementById("prev");
            const nextBtn = document.getElementById("next");
            const dotsWrap = document.getElementById("dots");
            const carousel = document.getElementById("carousel");
            const slides = Array.from(track.children);
            let slidesPerView = getSlidesPerView();
            let index = 0; // page index (not card index)
            let autoplayInterval = null;
            const gap = 18; // px, same as CSS gap

            function getSlidesPerView() {
              const w = window.innerWidth;
              if (w < 640) return 1;
              if (w < 900) return 2;
              return 3;
            }

            function updateSizes() {
              slidesPerView = getSlidesPerView();
              // compute slide width (min-width is used in CSS), but we'll compute the translate % for pages
              // number of pages
              const pages = Math.max(
                1,
                Math.ceil(slides.length / slidesPerView)
              );
              // rebuild dots
              buildDots(pages);
              // ensure index in range
              if (index >= pages) index = pages - 1;
              goTo(index, false);
            }

            function buildDots(pages) {
              dotsWrap.innerHTML = "";
              for (let i = 0; i < pages; i++) {
                const d = document.createElement("div");
                d.className = "dot";
                d.dataset.idx = i;
                if (i === index) d.classList.add("active");
                d.addEventListener("click", () => {
                  goTo(i);
                  resetAutoplay();
                });
                dotsWrap.appendChild(d);
              }
            }

            function goTo(pageIndex, animate = true) {
              const total = slides.length;
              const pages = Math.max(1, Math.ceil(total / slidesPerView));
              pageIndex = Math.max(0, Math.min(pageIndex, pages - 1));
              index = pageIndex;

              // percent translate: each page moves by (100 / pages) * pageIndex
              const percent = pageIndex * 100;
              // We will set transform using calc: translateX(-pageIndex * (100 / pages)%)
              // But simpler: compute card width in px and translate by cardWidth * slidesPerView * pageIndex
              const trackRect = track.getBoundingClientRect();
              // compute one card's outer width (including gap)
              const firstCard = slides[0];
              const cardRect = firstCard.getBoundingClientRect();
              const cardWidth = cardRect.width + gap;
              const offset = pageIndex * slidesPerView * cardWidth;
              // clamp offset max so we don't leave blank space at end
              const maxOffset = Math.max(
                0,
                cardWidth * slides.length - carousel.clientWidth
              );
              const finalOffset = Math.min(offset, maxOffset);
              if (!animate) track.style.transition = "none";
              else track.style.transition = "";
              track.style.transform = `translateX(${-finalOffset}px)`;

              // update dots
              Array.from(dotsWrap.children).forEach((d, i) =>
                d.classList.toggle("active", i === index)
              );
            }

            prevBtn.addEventListener("click", () => {
              goTo(index - 1);
              resetAutoplay();
            });
            nextBtn.addEventListener("click", () => {
              goTo(index + 1);
              resetAutoplay();
            });

            // autoplay
            function startAutoplay() {
              stopAutoplay();
              autoplayInterval = setInterval(() => {
                const pages = Math.max(
                  1,
                  Math.ceil(slides.length / slidesPerView)
                );
                goTo((index + 1) % pages);
              }, 4000);
            }
            function stopAutoplay() {
              if (autoplayInterval) {
                clearInterval(autoplayInterval);
                autoplayInterval = null;
              }
            }
            function resetAutoplay() {
              stopAutoplay();
              startAutoplay();
            }

            // swipe support
            let pointerStart = null;
            let pointerDx = 0;
            track.addEventListener("pointerdown", (e) => {
              pointerStart = e.clientX;
              track.style.transition = "none";
              track.setPointerCapture(e.pointerId);
              stopAutoplay();
            });
            track.addEventListener("pointermove", (e) => {
              if (pointerStart === null) return;
              pointerDx = e.clientX - pointerStart;
              track.style.transform = `translateX(${-Math.min(
                Math.max(getCurrentOffset() - pointerDx, 0),
                getMaxOffset()
              )}px)`;
            });
            track.addEventListener("pointerup", (e) => {
              if (pointerStart === null) return;
              const threshold = 60;
              if (pointerDx > threshold) {
                goTo(index - 1);
              } else if (pointerDx < -threshold) {
                goTo(index + 1);
              } else {
                goTo(index);
              }
              pointerStart = null;
              pointerDx = 0;
              resetAutoplay();
            });
            track.addEventListener("pointercancel", () => {
              pointerStart = null;
              pointerDx = 0;
              goTo(index);
              resetAutoplay();
            });
            function getCurrentOffset() {
              const style = window.getComputedStyle(track);
              const matrix = new WebKitCSSMatrix(style.transform);
              return Math.abs(matrix.m41);
            }
            function getMaxOffset() {
              const firstCard = slides[0].getBoundingClientRect();
              const cardWidth = firstCard.width + gap;
              return Math.max(
                0,
                cardWidth * slides.length - carousel.clientWidth
              );
            }

            // resize handling
            let resizeTimer = null;
            window.addEventListener("resize", () => {
              if (resizeTimer) clearTimeout(resizeTimer);
              resizeTimer = setTimeout(() => {
                // remove transition to avoid jump issues
                track.style.transition = "none";
                updateSizes();
                // re-enable transition
                setTimeout(() => (track.style.transition = ""), 50);
              }, 120);
            });

            // Initialize
            updateSizes();
            // small delay to ensure sizes computed correctly after fonts/images
            setTimeout(() => {
              goTo(0, false);
              startAutoplay();
            }, 80);

            // pause autoplay when mouse over carousel (desktop)
            carousel.addEventListener("mouseenter", stopAutoplay);
            carousel.addEventListener("mouseleave", resetAutoplay);
          })();
